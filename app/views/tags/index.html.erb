 <h1>Listing Tags</h1> 
<%= link_to 'New tag', new_tag_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Articles</th>
  </tr>
  
<% @tags.each do |tag| %>
  <tr> 
    <td><%= tag.name %></td>
    <td><%= tag.articles.try(&:name) %></td>
    <td><%= link_to 'Show', tag_path(tag) %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag_path(tag),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
