<div class="ava"><%= image_tag @user.avatar.url(:display) %></div>
<p class="name">User's name: <%= @user.name %><br>
    User's email: <%= @user.email %></p>
<p class="name">User has <%= @user.articles.count %> articles and <%= @user.tags.count %> tags</p>

<div class="users_articles">
  <% if @user.articles.any? %>
    <h4>User's articles:</h4>
    <% @articles.each do |article| %>
    <ol class="list">
      <b><%= link_to (article.title), article_path(article) %></b>
       (posted <%= time_ago_in_words(article.created_at) %> ago)
      <br>
    </ol>
    <% end %>
  <% end %>
</div><br>
<%= link_to 'Back', users_path %>