<%= form_for @article, remote: true do |f| %>
  <% if @article.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:</h4>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div id="articles_form">
    <p>
      <%= f.hidden_field :id, value: @article.id %>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "text_field" %>
    </p>
    
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "text_field" %>
    </p>
    <p>
      <%= f.label :user_id, "User" %><br>
      <%= f.select :user_id, User.all.map{|u| [u.name, u.id]}, class: "select" %> 
    </p>

    <p>
      <%= link_to "save",  "#", class: "save_editarticle"%>
    </p>
  </div>
<% end %>